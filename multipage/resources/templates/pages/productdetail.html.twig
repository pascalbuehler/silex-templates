{% extends 'layout.html.twig' %}
{% block content %}
<div class="row">
    <div class="product col-xs-12">
        <p class="img-caption">{{ product.name }}</p>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <img class="img-responsive img-thumbnail" src="{{ product.img }}" alt="{{ product.name }}">
    </div>
    <div class="col-xs-12 col-md-6 col-lg-8">
        <p>{{ product.description }}</p>
    </div>
</div>
<br /><br />
<p>
    <a href="{{ path('Products') }}">back</a>
</p>
{% endblock %}